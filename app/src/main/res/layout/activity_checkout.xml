<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sunshine.bbreaker.appet_i.Checkout"
    android:background="@color/appeti_blue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Shipping Information"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:textColor="@color/appeti_dark_green"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Name"
            android:layout_gravity="center_horizontal"
            android:autoText="true"
            android:clickable="true"
            android:editable="true"
            android:hint="Name"
            android:enabled="true"
            android:textSize="15dp"
            android:textStyle="italic"
            android:textColor="@color/appeti_dark_green"
            android:textColorHint="@color/appeti_dark_green"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/Email"
            android:layout_marginTop="20dp"
            android:hint="E-mail"
            android:textColor="@color/appeti_dark_green"
            android:textSize="15dp"
            android:textStyle="italic"
            android:textColorHint="@color/appeti_dark_green" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/Phone"
            android:layout_marginTop="20dp"
            android:hint="Phone"
            android:textColorHint="@color/appeti_dark_green"
            android:textColor="@color/appeti_dark_green"
            android:textSize="15dp"
            android:textStyle="italic" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/Address"
            android:layout_marginTop="20dp"
            android:autoText="true"
            android:editable="true"
            android:hint="Shipping Address"
            android:textStyle="italic"
            android:textSize="15dp"
            android:textColor="@color/appeti_dark_green"
            android:textColorHint="@color/appeti_dark_green" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/City"
            android:layout_marginTop="20dp"
            android:textColor="@color/appeti_dark_green"
            android:textColorHint="@color/appeti_dark_green"
            android:hint="City Name"
            android:textSize="15dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/Pincode"
            android:textColor="@color/appeti_dark_green"
            android:textColorHint="@color/appeti_dark_green"
            android:hint="PIN Code"
            android:textSize="15dp"
            android:layout_marginTop="20dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:layout_gravity="center_horizontal"
            android:entries="@array/state_arrays"
            android:prompt="@string/state_prompt"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm And Proceed "
            android:id="@+id/ConfirmButton"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/appeti_green"
            android:background="@color/appeti_dull_yellow"
            android:layout_marginTop="0dp" />
    </LinearLayout>

</RelativeLayout>
