<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sunshine.bbreaker.appet_i.Checkout"
    android:background="@color/appeti_green">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Shipping Information"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:textColor="@color/appeti_white"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/appeti_green"
        android:layout_below="@+id/textView7"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Name"
            android:layout_gravity="center_horizontal"
            android:autoText="true"
            android:clickable="true"
            android:editable="true"
            android:hint="Name"
            android:enabled="true"
            android:textSize="15dp"
            android:textStyle="italic"
            android:textColor="@color/appeti_green"
            android:textColorHint="@color/appeti_white"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/Email"
            android:layout_marginTop="10dp"
            android:hint="E-mail"
            android:textColor="@color/appeti_white"
            android:textSize="15dp"
            android:textStyle="italic"
            android:textColorHint="@color/appeti_white" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/Phone"
            android:layout_marginTop="10dp"
            android:hint="Phone"
            android:textColorHint="@color/appeti_white"
            android:textColor="@color/appeti_white"
            android:textSize="15dp"
            android:textStyle="italic" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/Address"
            android:layout_marginTop="10dp"
            android:autoText="true"
            android:editable="true"
            android:hint="Shipping Address"
            android:textStyle="italic"
            android:textSize="15dp"
            android:textColor="@color/appeti_white"
            android:textColorHint="@color/appeti_white" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.13">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Information"
                android:id="@+id/textView8"
                android:textColor="@color/appeti_white"
                android:textSize="25dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="New Text"
                android:id="@+id/textView9"
                android:layout_gravity="right"
                android:layout_weight="0.16" />

            <ImageView
                android:layout_width="189dp"
                android:layout_height="125dp"
                android:id="@+id/imageView4"
                android:src="@drawable/noodle"
                android:layout_below="@+id/textView8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_alignRight="@+id/textView8"
                android:layout_alignEnd="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noodles"
                android:id="@+id/textView10"
                android:layout_alignTop="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="5dp"
                android:textColor="@color/appeti_white"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:id="@+id/textView11"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_below="@+id/textView10"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount Payable"
                android:id="@+id/textView12"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:layout_alignBottom="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp" />
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed To Payment"
            android:id="@+id/button"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:background="#ff08380a"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</RelativeLayout>
