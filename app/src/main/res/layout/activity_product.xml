<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:id="@+id/container"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sunshine.bbreaker.appet_i.ProductActivity$PlaceholderFragment"
    android:background="@color/appeti_green"
    android:clickable="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ProductImage"
        android:background="@color/appeti_green"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Noodles"
        android:id="@+id/ProductTitle"
        android:textColor="@color/appeti_white"
        android:background="@color/appeti_green"
        android:textSize="50dp"

        android:layout_margin="10dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/ProductDescription"
        android:id="@+id/ProductDescription"
        android:background="@color/appeti_green"
        android:textColor="@color/appeti_white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="gravity"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Happy Price-$2"
        android:id="@+id/PriceTextView"
        android:textColor="@color/appeti_white"
        android:textSize="20dp"
        android:textStyle="bold"
         />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add To Cart"
        android:id="@+id/AddToCartButton"
        android:textColor="@color/background_floating_material_light"
        android:background="@color/appeti_dark_green"
        android:textSize="40dp"
        />
</LinearLayout>
