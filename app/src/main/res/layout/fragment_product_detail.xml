<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sunshine.bbreaker.appet_i.ProductActivity$PlaceholderFragment"
    android:background="@color/appeti_green"
    android:clickable="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:id="@+id/imageView2"
        android:src="@drawable/noodle"
        android:background="@color/appeti_green"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Noodles"
        android:id="@+id/ProductTitle"
        android:textColor="@color/appeti_white"
        android:background="@color/appeti_green"
        android:textSize="50dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/ProductDescription"
        android:id="@+id/textView"
        android:background="@color/appeti_green"
        android:textColor="@color/appeti_white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="gravity"
        android:layout_below="@+id/ProductTitle"
        android:layout_alignLeft="@+id/ProductTitle"
        android:layout_alignStart="@+id/ProductTitle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add To Cart"
        android:id="@+id/CartButton"
        android:textColor="@color/background_floating_material_light"
        android:background="@color/appeti_dark_green"
        android:textSize="40dp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Happy Price-$2"
        android:id="@+id/textView2"
        android:textColor="@color/appeti_white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />
</RelativeLayout>
