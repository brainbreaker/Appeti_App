<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/appeti_white">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:text="PRODUCT IMAGE"
            android:id="@+id/ProductView"

        android:background="@color/appeti_green"
        android:textColor="@color/appeti_white"
        android:textColorHighlight="@color/accent_material_dark"
        android:textIsSelectable="false"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:text="Add To WishList"
        android:id="@+id/WishListView"
        android:textColor="@color/appeti_white"
        android:gravity="center_horizontal"
        android:background="@color/appeti_green"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ProductView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:text="Add To Cart"
        android:id="@+id/AddToCart"
        android:textColor="@color/appeti_white"
        android:gravity="center_horizontal"
        android:background="@color/appeti_green"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignTop="@+id/WishListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>