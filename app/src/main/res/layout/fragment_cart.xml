<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sunshine.bbreaker.appet_i.Cart$PlaceholderFragment"
    android:background="@color/appeti_green"
    android:id="@+id/container">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Noodles"
        android:id="@+id/textView3"
        android:textColor="@color/appeti_white"
        android:textStyle="bold"
        android:textSize="50sp"
        android:background="@color/appeti_green"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView3"
        android:src="@drawable/noodle"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quantity"
        android:id="@+id/textView4"
        android:textColor="@color/appeti_white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Amount"
        android:id="@+id/textView5"
        android:textColor="@color/appeti_white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/editText"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:background="@color/appeti_white"
        android:textColor="@color/appeti_green"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="0.00"
        android:autoText="false"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Proceed To Checkout"
        android:id="@+id/checkout"
        android:background="@color/appeti_dark_green"
        android:textColor="@color/appeti_white"
        android:textSize="25sp"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="@color/appeti_green"
        android:background="@color/appeti_white"
        android:layout_alignTop="@+id/textView4"
        android:text="1"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_toEndOf="@+id/textView4" />
</RelativeLayout>
